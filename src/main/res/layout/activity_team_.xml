<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Team_Activity">

    <ImageView
        android:id="@+id/imageShadow"
        android:layout_width="350dp"
        android:layout_height="340dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.07999998" />

    <ImageView
        android:id="@+id/imageBorder"
        android:layout_width="355dp"
        android:layout_height="355dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="false"
        android:background="@color/black"
        android:padding="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="false"
        android:background="@color/plain"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/awayGoalsAgstValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="f"
        app:layout_constraintBottom_toBottomOf="@+id/return_button"
        app:layout_constraintEnd_toStartOf="@+id/teamFlag"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@+id/imageShadow"
        app:layout_constraintTop_toBottomOf="@+id/goals" />

    <TextView
        android:id="@+id/homeGoalsAgstValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="f"
        app:layout_constraintBottom_toTopOf="@+id/return_button"
        app:layout_constraintEnd_toStartOf="@+id/teamFlag"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="@+id/imageShadow"
        app:layout_constraintTop_toBottomOf="@+id/goals"
        app:layout_constraintVertical_bias="0.86" />

    <ImageButton
        android:id="@+id/lineUp_button_shadow"
        android:layout_width="110dp"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="25dp"
        android:background="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageShadow"
        app:layout_constraintVertical_bias="0.8" />

    <ImageButton
        android:id="@+id/stats_button_shadow"
        android:layout_width="110dp"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="25dp"
        android:background="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lineUp_button_shadow"
        app:layout_constraintTop_toBottomOf="@+id/imageShadow"
        app:layout_constraintVertical_bias="0.8" />

    <ImageButton
        android:id="@+id/standings_button_shadow"
        android:layout_width="110dp"
        android:layout_height="200dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="22dp"
        android:layout_marginRight="22dp"
        android:layout_marginBottom="25dp"
        android:background="@color/dark_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/stats_button_shadow"
        app:layout_constraintTop_toBottomOf="@+id/imageShadow"
        app:layout_constraintVertical_bias="0.8" />

    <ImageButton
        android:id="@+id/lineUp_button"
        android:layout_width="110dp"
        android:layout_height="220dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="25dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageShadow"
        app:srcCompat="@drawable/lineup" />

    <ImageButton
        android:id="@+id/stats_button"
        android:layout_width="110dp"
        android:layout_height="220dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="25dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/lineUp_button_shadow"
        app:layout_constraintTop_toBottomOf="@+id/imageShadow"
        app:layout_constraintVertical_bias="0.507"
        app:srcCompat="@drawable/stats" />

    <ImageButton
        android:id="@+id/standings_button"
        android:layout_width="110dp"
        android:layout_height="220dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="25dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/stats_button_shadow"
        app:layout_constraintTop_toBottomOf="@+id/imageShadow"
        app:layout_constraintVertical_bias="0.507"
        app:srcCompat="@drawable/standings" />

    <TextView
        android:id="@+id/lineUp_txt"
        android:layout_width="20dp"
        android:layout_height="200dp"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:text="L INEUP"
        android:textColor="@color/plain"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/lineUp_button_shadow"
        app:layout_constraintEnd_toStartOf="@+id/lineUp_button"
        app:layout_constraintStart_toStartOf="@+id/lineUp_button_shadow"
        app:layout_constraintTop_toTopOf="@+id/lineUp_button_shadow" />

    <TextView
        android:id="@+id/stats_txt"
        android:layout_width="20dp"
        android:layout_height="200dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:text="STATS"
        android:textColor="@color/plain"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/lineUp_button_shadow"
        app:layout_constraintEnd_toStartOf="@+id/stats_button"
        app:layout_constraintStart_toStartOf="@+id/stats_button_shadow"
        app:layout_constraintTop_toTopOf="@+id/lineUp_button_shadow"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/standings_txt"
        android:layout_width="20dp"
        android:layout_height="200dp"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:text="RANKS"
        android:textColor="@color/plain"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="@+id/lineUp_button_shadow"
        app:layout_constraintEnd_toStartOf="@+id/standings_button"
        app:layout_constraintStart_toStartOf="@+id/standings_button_shadow"
        app:layout_constraintTop_toTopOf="@+id/lineUp_button_shadow"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/return_button"
        android:layout_width="174dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Return To Search"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView" />

    <TextView
        android:id="@+id/teamName"
        android:layout_width="271dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textSize="45sp"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/return_button"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.060000002" />

    <ImageView
        android:id="@+id/teamFlag"
        android:layout_width="115dp"
        android:layout_height="115dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/return_button"
        app:layout_constraintEnd_toEndOf="@+id/imageShadow"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.934"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/goals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Goals:"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/return_button"
        app:layout_constraintEnd_toStartOf="@+id/teamFlag"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/teamName"
        app:layout_constraintVertical_bias="0.01999998" />

    <TextView
        android:id="@+id/forGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="For:"
        app:layout_constraintBottom_toTopOf="@+id/return_button"
        app:layout_constraintEnd_toStartOf="@+id/teamFlag"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="@+id/imageShadow"
        app:layout_constraintTop_toBottomOf="@+id/goals"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/homeGoalsForValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="f"
        app:layout_constraintBottom_toTopOf="@+id/return_button"
        app:layout_constraintEnd_toStartOf="@+id/teamFlag"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="@+id/imageShadow"
        app:layout_constraintTop_toBottomOf="@+id/goals"
        app:layout_constraintVertical_bias="0.218" />

    <TextView
        android:id="@+id/awayGoalsForValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="f"
        app:layout_constraintBottom_toTopOf="@+id/return_button"
        app:layout_constraintEnd_toStartOf="@+id/teamFlag"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="@+id/imageShadow"
        app:layout_constraintTop_toBottomOf="@+id/goals"
        app:layout_constraintVertical_bias="0.436" />

    <TextView
        android:id="@+id/AgstGoals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:text="Against:"
        app:layout_constraintBottom_toTopOf="@+id/return_button"
        app:layout_constraintEnd_toStartOf="@+id/teamFlag"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintStart_toStartOf="@+id/imageShadow"
        app:layout_constraintTop_toBottomOf="@+id/goals"
        app:layout_constraintVertical_bias="0.61" />


</android.support.constraint.ConstraintLayout>